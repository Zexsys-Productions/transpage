{
  "manifest_version": 3,
  "name": "Transpage",
  "version": "1.0",
  "description": "A Chrome extension for learning languages through webpage translation",
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["ui/*", "fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Transpage"
  },
  "host_permissions": ["<all_urls>"],
